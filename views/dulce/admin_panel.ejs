<%- include('../templates/header', { titulo: 'Inicio' }) %>
<div class="container">
    <h2 class="my-4">Lista de Dulces</h2>
    <a href="/dulce/new" class="btn btn-success">Agregar Dulce</a>
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Tipo</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% dulces.forEach(dulce => { %>
                <tr>
                    <td>
                        <% if (dulce.imagenes && dulce.imagenes.length > 0) { %>
                            <img src="<%= dulce.imagenes[0] %>" alt="Imagen de <%= dulce.nombre %>" width="100">
                        <% } else { %>
                            <span>Sin imagen</span>
                        <% } %>
                    </td>
                    <td><%= dulce.nombre %></td>
                    <td><%= dulce.tipo %></td>
                    <td><%= dulce.descripcion %></td>
                    <td>
                        <a href="/dulce/<%= dulce._id %>/edit" class="btn btn-warning">Editar</a>
                        <form action="/dulce/<%= dulce._id %>?_method=DELETE" method="POST" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Paginación -->
    <nav>
        <ul class="pagination justify-content-center">
            <% if (currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="/dulce?page=<%= currentPage - 1 %>">Anterior</a>
                </li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                    <a class="page-link" href="/dulce?page=<%= i %>"><%= i %></a>
                </li>
            <% } %>

            <% if (currentPage < totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="/dulce?page=<%= currentPage + 1 %>">Siguiente</a>
                </li>
            <% } %>
        </ul>
    </nav>
</div>

<%- include('../templates/footer') %>
